<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/rlTopContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/swiper3"
            >
            <TextView
                android:id="@+id/tvText"
                style="@style/text"
                android:text="医药进销存系统"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_20"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/dp_10"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:layout_below="@id/tvText"
                android:layout_marginTop="@dimen/dp_40"
                android:id="@+id/lgStatistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentBottom="true"
                app:num="3"
                >
            </com.hszl.medicine.view.ViewGroupTest>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/dp_10"
                style="@style/text"
                android:text="销售管理"
                android:textSize="@dimen/sp_16"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:id="@+id/fclgSaler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:num="3"
                >

            </com.hszl.medicine.view.ViewGroupTest>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/dp_10"
                style="@style/text"
                android:text="收付款管理"
                android:textSize="@dimen/sp_16"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:id="@+id/fclgPaymentReceived"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:num="3"
                >

            </com.hszl.medicine.view.ViewGroupTest>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/dp_10"
                style="@style/text"
                android:text="仓库管理"
                android:textSize="@dimen/sp_16"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:id="@+id/fclgStock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:num="3"
                >

            </com.hszl.medicine.view.ViewGroupTest>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/dp_10"
                style="@style/text"
                android:text="基础数据"
                android:textSize="@dimen/sp_16"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:id="@+id/fclgBasicData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:num="3"
                >

            </com.hszl.medicine.view.ViewGroupTest>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:padding="@dimen/dp_10"
                style="@style/text"
                android:text="报表统计"
                android:textSize="@dimen/sp_16"
                />
            <com.hszl.medicine.view.ViewGroupTest
                android:id="@+id/fclgReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:num="3"
                >

            </com.hszl.medicine.view.ViewGroupTest>
        </LinearLayout>

    </LinearLayout>

</ScrollView>